<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/start_here"
        android:textColor="@color/full_white"
        android:textSize="@dimen/text_regular_3x" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/tvHead"
        android:layout_marginBottom="@dimen/margin_medium_3"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add_24dp" />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_round_corner"
                android:drawableLeft="@drawable/ic_play_arrow_24dp"
                android:drawablePadding="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_medium_3"
                android:paddingRight="@dimen/margin_large"
                android:text="Start"
                android:textColor="@color/full_white" />

            <TextView
                android:id="@+id/tv_simplehabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btnStart"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="Simple Habit Starter"
                android:textColor="@color/full_white"
                android:textSize="@dimen/text_regular_3x" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_3"
                android:text="@string/time_5mins"
                android:textColor="@color/full_white" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>